<Window x:Class="_19.Авторизация"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_19"
        mc:Ignorable="d"
        Title="Авторизация" Height="217" FontSize="16" Width="221" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Activated="Window_Activated">
    <Grid>
        <StackPanel >
            <Label>Пользователь</Label>
            <TextBox x:Name="txtLogin"/>
            <Label>Пароль</Label>
            <PasswordBox x:Name="txtPas" PasswordChar="*"/>
            <Button Content="Войти" IsDefault="True" Click="Enter_Click" Height="32"/>
            <Button Content="Отмена" IsCancel="True" Click="Cancel_Click" Height="34"/>
        </StackPanel>
    </Grid>
</Window>
